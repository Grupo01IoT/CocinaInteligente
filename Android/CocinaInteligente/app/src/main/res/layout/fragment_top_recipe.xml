<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topRecipe"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/ingredients"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@color/colorPrimaryDarkTransparent"
            android:gravity="center"
            android:text="@string/top_recipe_label"
            android:textAllCaps="true"
            android:textColor="@color/mainBackgroundColor"
            android:textSize="18sp"
            android:textStyle="normal" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/topName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Nombre"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="20sp" />

                <RatingBar
                    android:id="@+id/topRating"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logo_hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="logo del comentario"
                    android:src="@android:drawable/ic_menu_recent_history" />

                <TextView
                    android:id="@+id/topDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:text="1h 5min" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/topVeggieIcon"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:tint="@color/iconDarkerGray"
                    android:visibility="gone"
                    app:srcCompat="@drawable/veggie" />

                <ImageView
                    android:id="@+id/topVeganIcon"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:tint="@color/iconDarkerGray"
                    android:visibility="gone"
                    app:srcCompat="@drawable/vegan" />

                <ImageView
                    android:id="@+id/topDairyIcon"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:tint="@color/iconDarkerGray"
                    android:visibility="gone"
                    app:srcCompat="@drawable/dairy" />

                <ImageView
                    android:id="@+id/topGlutenIcon"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:tint="@color/iconDarkerGray"
                    android:visibility="gone"
                    app:srcCompat="@drawable/gluten" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>