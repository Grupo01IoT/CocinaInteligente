<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peso:"
                app:layout_constraintBottom_toTopOf="@+id/textView8"
                app:layout_constraintStart_toStartOf="@+id/btnLuzOnOff"
                app:layout_constraintTop_toBottomOf="@+id/temp3"
                app:layout_constraintVertical_bias="0.09" />

            <TextView
                android:id="@+id/tvweight"
                android:layout_width="75dp"
                android:layout_height="18dp"
                android:layout_marginStart="8dp"
                android:text="0g"
                app:layout_constraintBottom_toBottomOf="@+id/textView16"
                app:layout_constraintStart_toEndOf="@+id/textView16"
                app:layout_constraintTop_toTopOf="@+id/textView16" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="40dp"
                android:background="@color/invisible"
                android:text="Campana extractora"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/temp4" />

            <ImageButton
                android:id="@+id/btnExtraccionOnOff"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/invisible"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="@+id/textView10"
                app:layout_constraintStart_toStartOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/textView10"
                app:srcCompat="@drawable/btnextraoff" />

            <TextView
                android:id="@+id/tvExtraccionOnOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFF"
                app:layout_constraintEnd_toEndOf="@+id/btnExtraccionOnOff"
                app:layout_constraintStart_toStartOf="@+id/btnExtraccionOnOff"
                app:layout_constraintTop_toBottomOf="@+id/btnExtraccionOnOff" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@color/invisible"
                android:text="Luz de la campana"
                app:layout_constraintEnd_toStartOf="@+id/textView10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/temp3" />

            <ImageButton
                android:id="@+id/btnLuzOnOff"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/invisible"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="@+id/textView8"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                app:srcCompat="@drawable/btnluzoff" />

            <TextView
                android:id="@+id/tvLuzOnOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFF"
                app:layout_constraintEnd_toEndOf="@+id/btnLuzOnOff"
                app:layout_constraintStart_toStartOf="@+id/btnLuzOnOff"
                app:layout_constraintTop_toBottomOf="@+id/btnLuzOnOff" />

            <ImageButton
                android:id="@+id/temp3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/vitrooff"
                app:layout_constraintBottom_toTopOf="@+id/textView8"
                app:layout_constraintEnd_toStartOf="@+id/temp4"

                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/temp1" />

            <ImageButton
                android:id="@+id/temp4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:backgroundTint="#00000000"
                android:contentDescription="AAAA"

                android:cropToPadding="false"
                android:scaleType="center"
                android:src="@drawable/vitrooff"
                android:tint="#00000000"
                app:layout_constraintBottom_toTopOf="@+id/textView10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/temp3"
                app:layout_constraintTop_toBottomOf="@+id/temp2" />

            <TextView
                android:id="@+id/alert"
                android:layout_width="270dp"
                android:layout_height="58dp"
                android:layout_marginTop="32dp"
                android:background="#DD2C00"
                android:gravity="center"
                android:text="GAS LEAK DETECTED"
                android:textColor="#FFCFCF"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/t3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.593" />

            <ImageButton
                android:id="@+id/temp1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/vitrooff"
                app:layout_constraintBottom_toTopOf="@+id/temp3"
                app:layout_constraintEnd_toStartOf="@+id/temp2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/temp2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/vitroon"
                app:layout_constraintBottom_toTopOf="@+id/temp4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/temp1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/t4"
                android:layout_width="74dp"
                android:layout_height="47dp"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:text="0ºC"
                android:textColor="#DADADA"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/temp4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/temp3"
                app:layout_constraintTop_toTopOf="@+id/temp4" />

            <TextView
                android:id="@+id/t1"
                android:layout_width="74dp"
                android:layout_height="47dp"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:text="0ºC"
                android:textColor="#DADADA"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/temp3"
                app:layout_constraintEnd_toEndOf="@+id/temp1"
                app:layout_constraintStart_toStartOf="@+id/temp1"
                app:layout_constraintTop_toTopOf="@+id/temp1" />

            <TextView
                android:id="@+id/t3"
                android:layout_width="74dp"
                android:layout_height="47dp"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:text="0ºC"
                android:textColor="#DADADA"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/temp3"
                app:layout_constraintEnd_toEndOf="@+id/temp3"
                app:layout_constraintStart_toStartOf="@+id/temp3"
                app:layout_constraintTop_toTopOf="@+id/temp3" />

            <TextView
                android:id="@+id/t2"
                android:layout_width="74dp"
                android:layout_height="47dp"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:text="0ºC"
                android:textColor="#DADADA"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/temp4"
                app:layout_constraintEnd_toEndOf="@+id/temp2"
                app:layout_constraintStart_toEndOf="@+id/temp1"
                app:layout_constraintTop_toTopOf="@+id/temp2" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>