<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Home">
        <SwitchPreference
            android:defaultValue="true"
            android:key="currencySummaryUserOnOff"
            android:title="Show user summary" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="currencySummaryDeviceOnOff"
            android:title="Show device summary" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Notifications">
        <SwitchPreference
            android:defaultValue="false"
            android:key="currencyNotificationOnOff"
            android:title="Allow notifications" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="currencyVibrationOnOff"
            android:title="Allow vibration" />

        <EditTextPreference
            android:defaultValue="100"
            android:inputType="number"
            android:key="InactivityNotification"
            android:summary="How long before being notified in minutes"
            android:title="Notifications for inactivity" />
    </PreferenceCategory>

    <PreferenceCategory android:title="My Kitchen">
        <SwitchPreference
            android:defaultValue="true"
            android:key="currencyAssistantOnOff"
            android:title="Asistente de voz" />

        <EditTextPreference
            android:defaultValue="100"
            android:inputType="number"
            android:key="InactivityKitchen"
            android:summary="How long before switching OFF the stove (in minutes)"
            android:title="Stove on inactivity" />

        <EditTextPreference
            android:defaultValue="100"
            android:inputType="number"
            android:key="InactivityLight"
            android:summary="How long before switching OFF the lights (in minutes)"
            android:title="Lights on inactivity" />
    </PreferenceCategory>

    <PreferenceCategory android:title="General">
        <Preference
            android:key="about"
            android:title="About" />
        <Preference
            android:key="disclaimer"
            android:title="Disclaimer" />
        <Preference
            android:key="help"
            android:title="Help" />
    </PreferenceCategory>
</PreferenceScreen>